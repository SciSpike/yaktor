#!/usr/bin/env bash

if [ -z "$APP_NAME" ]; then
  APP_NAME=${PWD##*/}
  export APP_NAME=${APP_NAME//-} # (basename of the current directory)
fi

if [ -d .git ] && [ -n $(which git) ]; then
  export APP_TAG=$(git status | head -n 1 | awk '{ print $3 }')
else
  export APP_TAG=master
fi

docker-compose up --remove-orphans $@
